NAME
	remove_file - remove a file.
		
SYNOPSIS
	static int remove_file(string filepath)

DESCRIPTION
	Remove the file pointed to by filepath.

RETURN VALUE
	Returns 1 on success and 0 on failure.

EXAMPLES
	string stuff;

	stuff = normalize_path("sirdude.txt", "/tmp");

	if (remove_file(stuff) {
	   write("Removed " + stuff + "\n");
	} else {
	   write("Cannot remove " + stuff + "\n");
	}

