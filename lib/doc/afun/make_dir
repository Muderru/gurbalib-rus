NAME
	make_dir - Create a directory.
		
SYNOPSIS
	static int make_dir(string dir)

DESCRIPTION
	Create the directory specified by dir.
		
RETURN VALUE
	Returns 1 on success and 0 on failure.

EXAMPLES
	string name;
	int x;

	name = "sirdude";
	x = make_dir("/tmp/" + name);
	if (x) {
	   write("Done.\n");
	} else {
	   write("Unable to make tempdir.\n");
	}

