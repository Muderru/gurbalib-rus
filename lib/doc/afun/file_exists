NAME
	file_exists - check if a file exists

SYNOPSIS
	int file_exists(string filepath)

DESCRIPTION
	Checks if a file exists at filepath.

RETURN VALUE
	Returns 1 if a file exists at filepath, -1 if a directory exists
	at filepath, and 0 if no file found.

EXAMPLES
	if (file_exists("/tmp/sirdude.txt")) {
	   write("Error, tmp file for sirdude already exists.\n");
	}

SEE ALSO
	afun/dir_size, afun/file_size
